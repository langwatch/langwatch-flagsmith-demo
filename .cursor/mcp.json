{
  "mcpServers": {
    "langwatch": {
      "command": "npx",
      "args": [
        "-y",
        "@langwatch/mcp-server"
      ]
    },
    "mastra": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@mastra/mcp-docs-server"
      ]
    },
    "flagsmith": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://app.getgram.ai/mcp/flagsmith-mcp",
        "--header",
        "Mcp-Flagsmith-Token-Auth:${MCP_FLAGSMITH_TOKEN_AUTH}"
      ],
      "env": {
        "MCP_FLAGSMITH_TOKEN_AUTH": "<your-value-here>"
      }
    }
  }
}